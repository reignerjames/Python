# an open book exam

from time import *
from random import *
from typing import *
import re

'''
For loops
'''

# For loops in range
print("\nFor Loops:\n")
for i in range(1):
    print(i)

for i in range(1,3):
    print(i)

for i in range (3, 6, 2):
    print(i)

# For loop for Char
print("\nChar & list:\n")
for char in "test":
    print(char)

# For loop with list
print("")
for_items = [9, 8, 7]
for nums in for_items:
    print(nums)

'''
While loops
'''
# Basic while loop with incrementation
print(f"\nWhile loops:\n")
count = 0
while count < 3:
    print("=>", count)
    count += 1

# Using break to prevent infinite loop
print(f"\nBreak to stop:\n")
num = 1
while True:
    if num > 3:
        break
    print("=>", num)
    num += 1

# Skipping iteration
print(f"\nSkip iteration:\n")
y = 0
while y < 5:
    y += 1
    if y == 3:
        continue
    print("=>", y)

# Guessing game
print(f"\nGuessing Game: ")
key = "key"
guess = ""

while guess.lower() != key:
    guess = input("Guess: ")

print("Correct")
   
# Enter 5 Characters

while True:
    chars = input('\nEnter 5 Characters: \n')
    if len(chars) < 5:
        print('Require 5 Characters. ')
        continue
    break

'''
Defining Functions
'''
# Function with simple parameters
def parameters(width, height):
    area = width * height
    return area

print(f"\nParameters:\n{parameters(6, 7)}\n")

# Function with list
def min_max_avg(numbers):
    return min(numbers), max(numbers), sum(numbers) / len(numbers)

low, high, avg = min_max_avg([1, 2, 3, 4])

print(f"List:\n{low}\n{high}\n{avg}\n")

# Incrementing
count = 0

def increment():
    global count
    count += 1
    
increment()
print(f"Incrementing:\n{count}\n")

# Appending
items = []

def add_item(x):
    items.append(x)

def add_items(*x):
    items.extend(x)

def add_iterable(iterable):
    items.extend(iterable)
    
add_item(1)
add_items(2, 3)
add_iterable([4, 5])

print(f"Appending:\n{items}\n")
