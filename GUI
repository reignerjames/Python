from tkinter import *

# Creates and sets window parameters
window = Tk()
window.title ("Title")
window.geometry("400x400")
window['bg'] = 'green'

test_font = ('Calibri', 12)

# Creates button within window
button = Button(window,
                text = 'button',
                foreground = 'blue',
                font = 'Arial',
                activeforeground = 'red'
               )

button2 = Button(window,
                 text = 'button 2',
                 font = test_font,
                 highlightthickness = 8,
                 width = 12, height = 2,
                 bd = 0, relief = "flat",
                 padx = 10, pady = 6,
                 takefocus = 1
                 )

test_frame = Frame(window,
                   width = 100, height = 100,
                   bg = "white",
                   highlightthickness = 8,
                   highlightbackground = "cyan",
                   highlightcolor = "pink",
                   )

test_frame.pack(pady=10)
test_frame.focus_set()

# Packs button into window
button.pack(pady = 10)
button2.pack()

# Start GUI event loop
window.mainloop()

